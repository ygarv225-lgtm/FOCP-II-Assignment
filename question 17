#include <iostream>
#include <cmath>
using namespace std;

int main() {
    int num;
    cout << "Enter a positive integer: ";
    cin >> num;

    int sumDivisors = 0;
    for (int i = 1; i < num; i++) {
        if (num % i == 0) {
            sumDivisors += i;
        }
    }

    if (sumDivisors == num) {
        cout << num << " is a Perfect number." << endl;
    } else {
        cout << num << " is not a Perfect number." << endl;
    }

    int originalNum = num;
    int countDigits = 0;
    
    int temp = num;
    while (temp > 0) {
        temp = temp / 10;
        countDigits++;
    }

    temp = num;
    int sumPower = 0;
    while (temp > 0) {
        int digit = temp % 10;
        sumPower += round(pow(digit, countDigits));
        temp = temp / 10;
    }

    if (sumPower == originalNum) {
        cout << num << " is an Armstrong number." << endl;
    } else {
        cout << num << " is not an Armstrong number." << endl;
    }

    return 0;
}
