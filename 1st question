#include <iostream>
using namespace std;
int main()
{
    int m1, m2, m3;
    float average;
    cout << "Enter marks of first student: ";
    cin >> m1;
    cout << "Enter marks of second student: ";
    cin >> m2;
    cout << "Enter marks of third student: ";
    cin >> m3;
    
    average = (m1 + m2 + m3) / 3.0;
    cout << "Average marks of the class = " << average;
    return 0;
}
